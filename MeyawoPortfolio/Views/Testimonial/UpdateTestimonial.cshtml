@model MeyawoPortfolio.Models.TblTestimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Referans Güncelleme Sayfası</h2>
<form method="post">
    <label>Referans ID</label>
    <input type="text" name="TestimonialID" readonly value="@Model.TestimonialID" class="table table-bordered" />

    <label>Referans Adı</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "table table-bordered" })
    <br />
    <label>Referans Görsel Linki</label>
    @Html.TextBoxFor(x => x.ImageURL, new { @class = "table table-bordered" })
    <br />
    <label>Statüsü</label>
    @Html.TextBoxFor(x => x.Status, new { @class = "table table-bordered" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "table table-bordered" })
    <br />

    <button class="btn btn-success">Referansı Güncelle</button>
</form>

