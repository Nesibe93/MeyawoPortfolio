@model MeyawoPortfolio.Models.TblAbout
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Hakkımda Güncelleme Sayfası</h2>

<form method="post">
    <label>Hizmet ID</label>
    <input type="text" class="table table-bordered" value="@Model.AboutID" name="AboutID" />
    <br />
    <label>Hakkımda Başlığı</label>
    <input type="text" class="table table-bordered" value="@Model.Title" name="Title" /> @*name: Sql'deki tablo sütununun karşılığıdır.*@
    <label>Başlık</label>
    <input type="text" class="table table-bordered" value="@Model.Header" name="Header" />
    <label>Hakkımda Görseli</label>
    <input type="text" class="table table-bordered" value="@Model.ImageURL" name="ImageURL" />
    <br />
    <label>Hakkımda Açıklaması</label>
    <textarea rows="4" class="table table-bordered" name="Description">@Model.Description</textarea>
    <br />
    <button class="btn btn-info">Hizmeti güncelle</button>
</form>